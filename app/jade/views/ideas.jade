include mixins/formbtngroup
include mixins/mymodalform
include mixins/mypending
include mixins/ideaform
include mixins/trades

div.row
  +trades

  +my-pending('!ideas')
    section.col-sm-9
      article.text-center.lead(ng-repeat='idea in ideas | orderBy:"body.length":true')
        - var _isEditing = 'isEditing(idea.id)'
        
        div(ng-hide=_isEditing)
          p {{idea.body}}

        div(ng-show=_isEditing)
          +idea-form

        +form-btn-group('idea')

        hr

+my-modal-form('إضافة فكرة', 'create(idea)')
  +idea-form
