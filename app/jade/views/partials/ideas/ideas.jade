include ../shared/editable/formbtngroup
include ideaform

mixin ideas
  article.text-center.lead(
    ng-repeat='idea in ideas')
    - var _isEditing = 'isEditing(idea.id)'

    div(ng-hide=_isEditing)
      p {{idea.body}}

    div(ng-show=_isEditing)
      +idea-form

    +form-btn-group('idea')

    hr
