include ../shared/fieldwitherrors

mixin worker-form(isShown)
  div(ng-show=isShown)
    +field-with-errors('trade_id')
      select.form-control(required placeholer='Trade'
        ng-model='worker.trade_id' ng-options='t.id as t.name for t in trades')

    +field-with-errors('shop_id')
      select.form-control(required placeholer='Shop'
        ng-model='worker.shop_id', ng-options='s.id as s.name for s in shops')

    if block
      block

    +field-with-errors('phone')
      input.form-control(type='tel' placeholder='Phone'
        ng-model='worker.phone')

    +field-with-errors('rating')
      input.form-control(type='number' placeholder='Rating'
        min='0' max='5' ng-model='worker.rating')

    +field-with-errors('notes')
      textarea.form-control(placeholder='Notes'
        min='0', ng-model='worker.notes')
