mixin my-pending(hideCondition)
  div.text-center.progress.progress-striped.active(ng-show=hideCondition)
    div.progress-bar(role='progressbar' aria-valuenow='99'
      aria-valuemin='0' aria-valuemax='100' style='width: 100%')
      span.sr-only Pending

  section(ng-hide=hideCondition)
    block
